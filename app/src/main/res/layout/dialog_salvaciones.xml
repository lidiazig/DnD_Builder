<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000000"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="2dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textView81"
            android:layout_width="100sp"
            android:layout_height="wrap_content"
            android:layout_margin="2dp"
            android:layout_weight="1"
            android:gravity="center"
            android:text="Saving throw"
            android:textColor="#FFFFFF"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/textView82"
            android:layout_width="70sp"
            android:layout_height="wrap_content"
            android:layout_margin="2dp"
            android:layout_weight="1"
            android:gravity="center"
            android:text="Base"
            android:textColor="#FFFFFF"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/textView83"
            android:layout_width="70sp"
            android:layout_height="wrap_content"
            android:layout_margin="2dp"
            android:layout_weight="1"
            android:gravity="center"
            android:text="Ability"
            android:textColor="#FFFFFF"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/textView84"
            android:layout_width="70sp"
            android:layout_height="wrap_content"
            android:layout_margin="2dp"
            android:layout_weight="1"
            android:gravity="center"
            android:text="Magic"
            android:textColor="#FFFFFF"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/textView85"
            android:layout_width="70sp"
            android:layout_height="wrap_content"
            android:layout_margin="2dp"
            android:layout_weight="1"
            android:gravity="center"
            android:text="Misc"
            android:textColor="#FFFFFF"
            android:textStyle="bold" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="2dp"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textView86"
            android:layout_width="100sp"
            android:layout_height="wrap_content"
            android:layout_margin="2dp"
            android:layout_weight="1"
            android:gravity="center"
            android:text="FORTITUDE"
            android:textColor="#FFFFFF"
            android:textSize="18sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/txtFortalezaBase"
            android:layout_width="70sp"
            android:layout_height="wrap_content"
            android:layout_margin="2dp"
            android:layout_weight="1"
            android:backgroundTint="@color/cardview_light_background"
            android:ems="10"
            android:gravity="center"
            android:inputType="numberSigned"
            android:textColor="#FFFFFF" />

        <EditText
            android:id="@+id/txtFortalezaAbility"
            android:layout_width="70sp"
            android:layout_height="wrap_content"
            android:layout_margin="2dp"
            android:layout_weight="1"
            android:backgroundTint="@color/cardview_light_background"
            android:ems="10"
            android:gravity="center"
            android:hint="CON"
            android:inputType="numberSigned"
            android:textColor="#FFFFFF"
            android:textColorHint="#FFFFFF" />

        <EditText
            android:id="@+id/txtFortalezaMagic"
            android:layout_width="70sp"
            android:layout_height="wrap_content"
            android:layout_margin="2dp"
            android:layout_weight="1"
            android:backgroundTint="@color/cardview_light_background"
            android:ems="10"
            android:gravity="center"
            android:inputType="numberSigned"
            android:textColor="#FFFFFF" />

        <EditText
            android:id="@+id/txtFortalezaMisc"
            android:layout_width="70sp"
            android:layout_height="wrap_content"
            android:layout_margin="2dp"
            android:layout_weight="1"
            android:backgroundTint="@color/cardview_light_background"
            android:ems="10"
            android:gravity="center"
            android:inputType="numberSigned"
            android:textColor="#FFFFFF" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="2dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textView87"
            android:layout_width="100sp"
            android:layout_height="wrap_content"
            android:layout_margin="2dp"
            android:layout_weight="1"
            android:gravity="center"
            android:text="REFLEX"
            android:textColor="#FFFFFF"
            android:textSize="18sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/txtReflejosBase"
            android:layout_width="70sp"
            android:layout_height="wrap_content"
            android:layout_margin="2dp"
            android:layout_weight="1"
            android:backgroundTint="@color/cardview_light_background"
            android:ems="10"
            android:gravity="center"
            android:inputType="numberSigned"
            android:textColor="#FFFFFF" />

        <EditText
            android:id="@+id/txtReflejosAbility"
            android:layout_width="70sp"
            android:layout_height="wrap_content"
            android:layout_margin="2dp"
            android:layout_weight="1"
            android:backgroundTint="@color/cardview_light_background"
            android:ems="10"
            android:gravity="center"
            android:hint="DEX"
            android:inputType="numberSigned"
            android:textColor="#FFFFFF"
            android:textColorHint="#FFFFFF" />

        <EditText
            android:id="@+id/txtReflejosMagic"
            android:layout_width="70sp"
            android:layout_height="wrap_content"
            android:layout_margin="2dp"
            android:layout_weight="1"
            android:backgroundTint="@color/cardview_light_background"
            android:ems="10"
            android:gravity="center"
            android:inputType="numberSigned"
            android:textColor="#FFFFFF" />

        <EditText
            android:id="@+id/txtReflejosMisc"
            android:layout_width="70sp"
            android:layout_height="wrap_content"
            android:layout_margin="2dp"
            android:layout_weight="1"
            android:backgroundTint="@color/cardview_light_background"
            android:ems="10"
            android:gravity="center"
            android:inputType="numberSigned"
            android:textColor="#FFFFFF" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="2dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textView88"
            android:layout_width="100sp"
            android:layout_height="wrap_content"
            android:layout_margin="2dp"
            android:layout_weight="1"
            android:gravity="center"
            android:text="WILL"
            android:textColor="#FFFFFF"
            android:textSize="18sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/txtVoluntadBase"
            android:layout_width="70sp"
            android:layout_height="wrap_content"
            android:layout_margin="2dp"
            android:layout_weight="1"
            android:backgroundTint="@color/cardview_light_background"
            android:ems="10"
            android:gravity="center"
            android:inputType="numberSigned"
            android:textColor="#FFFFFF" />

        <EditText
            android:id="@+id/txtVoluntadAbility"
            android:layout_width="70sp"
            android:layout_height="wrap_content"
            android:layout_margin="2dp"
            android:layout_weight="1"
            android:backgroundTint="@color/cardview_light_background"
            android:ems="10"
            android:gravity="center"
            android:hint="WIS"
            android:inputType="numberSigned"
            android:textColor="#FFFFFF"
            android:textColorHint="#FFFFFF" />

        <EditText
            android:id="@+id/txtVoluntadMagic"
            android:layout_width="70sp"
            android:layout_height="wrap_content"
            android:layout_margin="2dp"
            android:layout_weight="1"
            android:backgroundTint="@color/cardview_light_background"
            android:ems="10"
            android:gravity="center"
            android:inputType="numberSigned"
            android:textColor="#FFFFFF" />

        <EditText
            android:id="@+id/txtVoluntadMisc"
            android:layout_width="70sp"
            android:layout_height="wrap_content"
            android:layout_margin="2dp"
            android:layout_weight="1"
            android:backgroundTint="@color/cardview_light_background"
            android:ems="10"
            android:gravity="center"
            android:inputType="numberSigned"
            android:textColor="#FFFFFF" />

    </LinearLayout>

    <Button
        android:id="@+id/btnSaveSalvaciones"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_margin="10dp"
        android:layout_weight="0"
        android:gravity="center"
        android:text="save"
        android:textStyle="bold" />

</LinearLayout>